<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iviRecetaImage"
        android:layout_width="346dp"
        android:layout_height="334dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/galletas1" />

    <TextView
        android:id="@+id/tviRecetaName"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/borde_redondo"
        android:backgroundTint="#FFFFFF"
        android:text="nombreReceta"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iviRecetaImage"
        app:layout_constraintStart_toStartOf="@+id/iviRecetaImage" />

    <TextView
        android:id="@+id/tviRecetaUser"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/borde_redondo"
        android:backgroundTint="#FFFFFF"
        android:text="nombreUsuario"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/iviRecetaImage"
        app:layout_constraintTop_toTopOf="@+id/iviRecetaImage" />

</androidx.constraintlayout.widget.ConstraintLayout>